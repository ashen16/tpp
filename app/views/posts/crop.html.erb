<h1>Crop Image</h1>

<div class="small-12 medium-4 large-4 columns">
  <h4>Preview</h4>
  <div class='thumb-preview-div'>
    <p><%= image_tag @post.image.url(:uncropped), :id => "preview" %></p>
  </div>
</div>

<div class="small-12 medium-8 large-8 columns">
  <p><%= image_tag @post.image.url(:uncropped).to_s, id: "crop" %></p>
</div>

<div class="small-12 medium-12 large-12 columns">
  <%= form_for @post do |f| %>
    <div class="actions">
      <% %w[x y w h].each do |attribute| %>
        <%= f.hidden_field "crop_#{attribute}"%>
      <% end %>
      <%= f.submit "Crop", class: 'button button-success'%>
    </div>
  <% end %>
</div>
