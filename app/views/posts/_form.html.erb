<%= form_for(@post) do |f| %>
	<%= f.file_field :image %>
	<%= f.text_field :title, placeholder: "title"%>
	<%= f.text_area :body, placeholder: "body", :style => "height: 400px"%>
	<%= f.label :tag_list, "Tags (separated by commas)" %><br />
	<%= f.text_field :tag_list %>
	<%= f.submit "Submit", :class => 'button success' %>
<% end %>
