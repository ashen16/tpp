<h1>Technology, Psychology, Philosophy</h1>
<div class="row">
	<div class="col-lg-8 col-md-8">
		<% @posts.reverse_each do |post| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2><%= link_to post.title, post_path(post) %></h2>
				</div>
				<div class="panel-body">
					<p><b>Date:</b> <%= l post.created_at, format: :short %></p>
					<p><%= image_tag post.image_url.to_s, :class => 'img-responsive img-polaroid img-center' %></p>
					<p><%= post.body %></p>
				</div>
				<%= link_to 'Edit Post', edit_post_path(post), :class => 'btn btn-warning' %>
				<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
			</div>
		<% end %>
	</div>

	<div class="col-lg-4 col-md-4 text-center">
		<div class="panel panel-default">
			<h2>Popular Posts</h2>
		</div>
	</div>
</div>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary'%>
