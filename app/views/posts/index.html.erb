<h1>Technology, Psychology, Philosophy</h1>
<div class="row">
	<div class="panel panel-default col-lg-8 col-md-8">
		<% @posts.each do |post| %>
			<h2><%= post.title %></h2>
			<p>Date: <%= l post.created_at, format: :short %></p>
			<p><%= image_tag post.image_url(:thumb).to_s, :class => 'img-rounded img-center' %></p>
			<p><%= post.body %></p>
			<%= link_to 'Edit Post', edit_post_path(post), :class => 'btn btn-warning' %>
			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
		<% end %>
	</div>

	<div class="col-lg-4 col-md-4 text-center">
		<div class="panel panel-default">
			<h2>Popular Posts</h2>
		</div>
	</div>
</div>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary'%>
