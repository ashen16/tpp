<h1>Blog</h1>
<div class="row">
	<div class="panel panel-default col-lg-8 col-md-8">
		<% @posts.each do |post| %>
			<h1><%= post.title %></h1>
			<p>Date: <%= l post.created_at, format: :short %></p>
			<p><%= image_tag post.image_url(:thumb).to_s %></p>
			<p><%= post.body %></p>
			<%= link_to 'Edit Post', edit_post_path(post), :class => 'btn btn-warning' %>
			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
		<% end %>
	</div>

	<div class="col-lg-4 col-md-4">
		<h2>Popular Posts</h2>
		<div class="panel panel-default">

		</div>
	</div>
</div>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary'%>
