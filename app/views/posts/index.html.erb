<h1>Technology, Psychology, Philosophy</h1>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  	<% first = true %>
  	<% @posts.limit(5).each do |post| %>
		<% if first %>
    	<div class="item active">
    	<% first = false %>
    <% else %>
    	<div class="item">
    <% end %>

      	<%= image_tag post.image_url.to_s, :class => 'img-responsive' %>
      	<div class="carousel-caption">
        	<h3><%= link_to post.title, post_path(post) %></h3>
      	</div>

    </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<br />
<div class="row">
	<div class="col-lg-8 col-md-8">
		<% @posts.each do |post| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2><%= link_to post.title, post_path(post) %></h2>
					<p><b>Date:</b> <%= l post.created_at, format: :short %></p>
				</div>
				<div class="panel-body">
					<% if post.image? %>
						<p><%= image_tag post.image_url.to_s, :class => 'img-responsive img-polaroid img-center' %></p>
					<% end %>
					<p><%= post.body.html_safe %></p>
				</div>
				<%= link_to 'Edit Post', edit_post_path(post), :class => 'btn btn-warning' %>
				<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
			</div>
		<% end %>
		<div class="text-center">
			<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
		</div>
	</div>

	<div class="col-lg-4 col-md-4">
		<div class="row panel panel-default panel-body">
      <div class="text-center">
        <h3>Recent Posts</h3>
      </div>
      <% @posts.take(5).reverse_each do |post| %>
        <li><%= link_to post.title, post_path(post) %></li>
      <% end %>
		</div>
    <div class="row panel panel-default panel-body">
      <%= render 'archive' %>
    </div>
	</div>
</div>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary'%>
